{
  "name": "voice",
  "version": "1.0.0",
  "private": true,
  "description": "lichess.org voice rec",
  "author": "T-Bone Duplexus",
  "license": "AGPL-3.0-or-later",
  "types": "dist/voice.d.ts",
  "exports": {
    ".": "./src/voice.ts"
  },
  "dependencies": {
    "chess": "workspace:*",
    "common": "workspace:*",
    "game": "workspace:*",
    "vosk-browser": "^0.0.8"
  },
  "scripts": {
    "make-grammar": "node --experimental-strip-types --no-warnings makeGrammar.mts"
  },
  "build": {
    "bundle": [
      "src/**/voice.*.ts",
      "src/move/voice.move.ts"
    ],
    "sync": {
      "grammar/**": "public/compiled/grammar"
    },
    "hash": [
      "compiled/grammar/*"
    ]
  }
}
