{
  "name": "site",
  "version": "2.0.0",
  "private": true,
  "description": "lichess.org website globals",
  "author": "Thibault Duplessis",
  "license": "AGPL-3.0-or-later",
  "dependencies": {
    "chat": "workspace:*",
    "chess": "workspace:*",
    "common": "workspace:*",
    "dialog-polyfill": "0.5.6",
    "lichess-pgn-viewer": "^2.2.0",
    "tablesort": "^5.3.0"
  },
  "build": {
    "bundle": [
      "src/site.lpvEmbed.ts",
      "src/site.puzzleEmbed.ts",
      "src/site.tvEmbed.ts",
      {
        "module": "src/site.ts",
        "inline": "src/site.inline.ts"
      }
    ],
    "sync": {
      "node_modules/dialog-polyfill/dist/dialog-polyfill.esm.js": "public/npm"
    },
    "hash": [
      "font/lichess.woff",
      "font/lichess.woff2",
      "lifat/background/montage*.webp",
      "npm/*",
      "javascripts/**",
      "piece-css/*"
    ]
  }
}
