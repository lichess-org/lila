{
  "name": "site",
  "version": "2.0.0",
  "private": true,
  "description": "lichess.org website globals",
  "author": "Thibault Duplessis",
  "license": "AGPL-3.0-or-later",
  "types": "main.d.ts",
  "exports": {
    ".": "./dist/main.js",
    "./*": "./dist/*.js"
  },
  "typesVersions": {
    "*": {
      "*": [
        "dist/*"
      ]
    }
  },
  "dependencies": {
    "dialog-polyfill": "0.5.6",
    "chat": "workspace:*",
    "chess": "workspace:*",
    "common": "workspace:*",
    "lichess-pgn-viewer": "2.0.1",
    "voice": "workspace:*",
    "tablesort": "^5.3.0"
  },
  "lichess": {
    "modules": {
      "esm": {
        "src/main.ts": "lichess",
        "src/tvEmbed.ts": "tvEmbed",
        "src/puzzleEmbed.ts": "puzzle.embed",
        "src/lpvEmbed.ts": "lpv.embed"
      }
    },
    "copy": [
      {
        "src": "node_modules/hopscotch/dist/**",
        "dest": "../../public/npm/hopscotch/dist"
      },
      {
        "src": "node_modules/dialog-polyfill/dist/dialog-polyfill.esm.js",
        "dest": "../../public/npm"
      }
    ]
  }
}
